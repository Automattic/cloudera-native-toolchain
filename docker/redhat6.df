FROM centos:6.6

COPY ./redhat/yum-install /usr/local/bin
# We need to pin our yum updates to keep old library versions.
# Since we are at 6.6 we'll modify the /etc/yum.repos.d/CentOS-Base.repo
# file to vault's 6.6.
COPY ./redhat/CentOS-6.6-Base.repo /etc/yum.repos.d/CentOS-Base.repo

RUN yum-install https://dl.fedoraproject.org/pub/epel/epel-release-latest-6.noarch.rpm
RUN yum-install autoconf \
  automake \
  bison \
  byacc \
  bzip2 \
  ccache\
  curl \
  cyrus-sasl \
  cyrus-sasl-gssapi \
  cyrus-sasl-devel \
  cyrus-sasl-plain \
  flex \
  gcc \
  gcc-c++ \
  git \
  glibc-devel \
  java-1.8.0-openjdk-devel \
  krb5-devel \
  libevent-devel \
  libffi-devel \
  libtool \
  lzo-devel \
  make \
  mawk \
  ncurses-devel \
  ntp \
  openssl-devel \
  pigz \
  postgresql \
  postgresql-server \
  python-devel \
  python-pip \
  redhat-lsb \
  unzip \
  vim-common \
  wget \
  which \
  xz \
  zlib-devel


# Install `aws`
RUN pip install --upgrade awscli==1.16.96

# Install `mvn`
RUN cd /usr/local/ &&  \
    wget --progress=dot:giga http://apache.osuosl.org/maven/maven-3/3.6.0/binaries/apache-maven-3.6.0-bin.tar.gz && \
    tar xf apache-maven-3.6.0-bin.tar.gz
ENV M2_HOME=/usr/local/apache-maven-3.6.0
ENV M2=$M2_HOME/bin
ENV PATH=$M2:$PATH


COPY ./all/assert-dependencies-present.py /usr/local/bin
# Asserts that the packages listed above were correctly installed
RUN assert-dependencies-present.py
